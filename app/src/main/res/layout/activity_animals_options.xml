<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animalsOptions"
    android:background="@drawable/bg3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:text="Options"
            android:textColor="@color/Black"
            android:textSize="42dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Back"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button_3"
            android:onClick="onBackClick"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@color/DeepPurple"
            android:textSize="24dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/rounded_button_3"
            android:onClick="onAnimalsClick"
            android:text="Animals"
            android:textColor="@color/DeepPurple"
            android:drawableRight="@drawable/paw"
            android:paddingRight="70dp"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/rounded_button_3"
            android:onClick="onTestClick"
            android:text="Test"
            android:drawableRight="@drawable/stars"
            android:paddingRight="70dp"
            android:textColor="@color/DeepPurple"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/rounded_button_3"
            android:onClick="onAnimalGameClick"
            android:text="Game"
            android:drawableRight="@drawable/game"
            android:paddingRight="70dp"
            android:textColor="@color/DeepPurple"
            android:textSize="32dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_weight="1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>