<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Portal"
    android:background="@drawable/bg3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parent Portal"
        android:textStyle="bold"
        android:textSize="42dp"
        android:textColor="@color/DeepPurple"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/Back"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button_3"
        android:text="Back"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/DeepPurple"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:onClick="onBackClick"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Elains FaceBook"
                android:onClick="onFaceBookClick"
                android:background="@drawable/rounded_button_3"
                android:textColor="@color/DeepPurple"
                android:textSize="24dp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Instructional Facts"
                android:onClick="onInstructionalFactsClick"
                android:background="@drawable/rounded_button_3"
                android:textColor="@color/DeepPurple"
                android:textSize="24dp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Parenting"
                android:onClick="onParentingClick"
                android:background="@drawable/rounded_button_3"
                android:textColor="@color/DeepPurple"
                android:textSize="24dp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Life Lessons"
                android:onClick="onLessonsClick"
                android:background="@drawable/rounded_button_3"
                android:textColor="@color/DeepPurple"
                android:textSize="24dp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>