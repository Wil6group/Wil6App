<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleImageViewActivity"
    android:background="@drawable/bg3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/single_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Caption"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgSingle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:src="@drawable/people"
        android:scaleType="fitCenter"
        android:layout_below="@+id/single_caption"
        android:layout_above="@id/btnSingleBack"/>

    <Button
        android:id="@+id/btnSingleBack"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="139dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="122dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/rounded_button_3"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="@color/DeepPurple"
        android:textSize="20dp" />

</RelativeLayout>